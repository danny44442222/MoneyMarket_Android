<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/startup_bg"
    android:padding="@dimen/_20sdp">

    <ImageView
        android:padding="@dimen/_60sdp"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/signInTV"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/app_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signInTV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/rounded_corner_sky_blue_white_stroke"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="Sign In"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toTopOf="@id/signUpTv" />

    <TextView
        android:id="@+id/signUpTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="@dimen/_12ssp"
        android:background="@drawable/rounded_corner_blue_white_stroke"
        android:gravity="center"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>